<%= render 'books/showlist', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'40x40' %><br/><%= link_to @user.name,user_path(@user.id) %></td>
      <td><%= link_to @book.title, book_path %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success"%></td>
        <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
      <% else %>
        <td></td>
        <td></td>
      <% end %>

      </tr>

  </tbody>
</table>
