<%= render 'books/showlist', book: @book_new, user: @user %>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
      <td><%= link_to attachment_image_tag(@user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'40x40'),user_path(@user.id) %><br/><%= link_to @user.name,user_path(@user.id) %></td>
      <td><%= link_to @book.title, book_path %></td>
      <td><%= @book.body %></td>
      <% if @user == current_user %>
        <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success"%></td>
        <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
      <% else %>
        <td>
          <% if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            </p>
          <% end %>
        </td>
        <td><p>コメント数：<%= @book.book_comments.count %></p></td>
      <% end %>
      </tr>
      <% @book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:'40x40'),user_path(book_comment.user_id) %>
          </br><%= link_to book_comment.user.name,user_path(book_comment.user_id) %>
        </td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comments_path(book_comment.book, book_comment), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
      <% end %>
  </tbody>
</table>
<%= form_with(model:[@book, @book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',style: "width:100%" %>
  <%= f.submit "送信" %>
<% end %>
</div>
