<div>
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

    <p><i class="fas fa-user-cog"></i><%= link_to "プロフィール編集", edit_user_path(user) %></p>

</div>

<h2>Newbook</h2>
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br/>
  <%= f.submit 'Create Book' %>
<% end %>