<h1>Books</h1>
<% @books.each do |book| %>
<% @users.each do |user| %>
<div>
  <%= link_to user_image_path(user_image.id) do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <% end %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>

</div>
<% end %>

<h1>Newbook</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>