<% if @book.errors.any? %>
  <%= @book.errors.count %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= render 'users/list', book: @book, user: @user %>
<h1>Books</h1>
<% @books.each do |book| %>
<div>

  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>

</div>
<% end %>