<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg",size:'63x63' %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

    <%= link_to "", edit_user_path(current_user), class: "fas fa-user-cog btn btn-outline-secondary btn-block" %>



  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title,style: "width:100%" %>
  </div>
  <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body,style: "width:100%" %>
  </div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
</div>