<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>Users info</h2>
  <%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <label for="inputName">Name</label>
    <br/>
    <%= f.text_field :name, id:"inputName", placeholder:"名前",style: "width:100%" %>
  </div>
  <div class="form-group">
    <label for="inputImage">Image</label>
    <br/>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="form-group">
    <label for="inputIntroduction">Introduction</label>
    <br/>
    <%= f.text_area :introduction, style: "width:100%" %>
  </div>
    <br/>
    <%= f.submit "Update User",class: "btn btn-secondary" %>
  <% end %>
</div>